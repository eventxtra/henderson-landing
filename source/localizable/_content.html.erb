<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-12 col-lg-8">
    <%= image_tag 'banner.png', :style => "width: 100%; display: block; margin: 0 auto;" %>
    </div>
  </div>
  <div class="row justify-content-lg-center" style="margin-top: 10px;">
    <%# left %>
    <div class="col-12 col-lg-6">
      <div style="margin: 10px 0">
        <p class="content"><%= t('company') %></p>
        <p class="title"><%= t('title') %></p>
        <p class="date"><%= t('date') %></p>
        <p class="content">01/05/2025 - 05/05/2025</p>
        <p class="date"><%= t('location') %></p>
        <p class="content"><%= t('address1') %></p>
        <p class="content"><%= t('address2') %></p>
        <a href="https://maps.app.goo.gl/HP8eswEBRNqwi2Ns7" target="_BLANK"><%= t('view_map') %></a>
      </div>
    </div>
    <%# right button area %>
    <div class="col-12 col-lg-2" style="margin-top: 10px">
      <p class="content"><%= t('select_date') %></p>
      <% data.each do |d| %>
          <% if d[2] == "full" %>
              <button disabled type="button" style="margin-bottom: 15px; font-weight: 700; font-size: 18px" class="btn btn-block btn-secondary btn-color"><%= d[0] %></button>
          <% else %>
            <a target="_BLANK" href=<%= d[1] %>>
              <button type="button" style="margin-bottom: 15px; font-weight: 700; font-size: 18px" class="btn btn-block btn-secondary btn-color"><%= d[0] %></button>
            </a>
          <% end %>
      <% end %>
    </div>
  </div>
  <%# des %>
  <div style="margin-top: 30px" class="row justify-content-lg-center">
    <div class="col-12 col-lg-8">
      <p class="content" style="font-weight: 700; font-size: 20px"><%= t('des_title1') %></p>
      <p class="content"><%= t('des_content1') %></p>
      <br>
      <p class="content" style="font-weight: 700;"><%= t('des_title2') %> </p>
      <p class="content"><%= t('des_content2') %></p>
      <br>
      <p class="content" style="font-weight: 700;"><%= t('des_title3') %></p>
      <p class="content"><%= t('des_content3') %></p>
      <p style="font-size: 12px; margin-top: 10px;"><%= t('tnc') %></p>
      <p style="font-size: 12px; margin-top: 10px;">
        <%= t('tnc2_1') %>
        <a href=<%= t('tnc2_2_link') %>><%= t('tnc2_2') %></a>
        <%= t('tnc2_3') %>
        <a href=<%= t('tnc2_4_link') %>><%= t('tnc2_4') %></a>
        <%= t('tnc2_5') %>
      </p>
    </div>
  </div>
